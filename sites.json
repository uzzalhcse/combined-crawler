[
  {
    "name": "abc",
    "url": "http://127.0.0.1:8080/product-details",
    "engine": {
      "isDynamic": false,
      "devCrawlLimit": 10,
      "concurrentLimit": 1
    },
    "collections": [
      {
        "entity": "categories",
        "originCollection": "sites",
        "processor": {
          "url_processor": {
            "plugin": "Categories"
          }
        }
      },
      {
        "entity": "products",
        "originCollection": "categories",
        "processor": {
          "url_processor": {
            "selector": {
              "query": ".categories"
            }
          }
        }
      },
      {
        "entity": "product_details",
        "originCollection": "sites",
        "processor": {
          "element_processor": {
            "elements": [
              {
                "element_id": "PageTitle",
                "selector": {
                  "query": "title"
                },
                "formatters": [
                  {
                    "type": "replace",
                    "args": {
                      "regex": "[^A-Za-z]",
                      "repl": ""
                    }
                  }
                ]
              },
              {
                "element_id": "Url",
                "plugin": "Url"
              },
              {
                "element_id": "Images",
                "multi_selector": {
                  "selectors": [
                    {
                      "query": ".images img",
                      "attr": "src"
                    },
                    {
                      "query": ".images img",
                      "attr": "data-src"
                    }
                  ]
                }
              },
              {
                "element_id": "ProductName",
                "plugin": "Name"
              },
              {
                "element_id": "Category",
                "plugin": "Category"
              },
              {
                "element_id": "Description",
                "plugin": "Description",
                "formatters": [
                  {
                    "type": "trim",
                    "args": {
                      "cutset": "\n"
                    }
                  }
                ]
              },
              {
                "element_id": "Attributes",
                "plugin": "Attributes"
              }
            ]
          }
        }
      }
    ]
  }
]
